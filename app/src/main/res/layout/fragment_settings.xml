<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.SettingsFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/settings_header_bloc"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/colorPrimary"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_user_photo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/default_photo"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:civ_border_color="#FF000000"/>
    <TextView
        android:id="@+id/settings_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Ivan ivanov"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_goneMarginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/settings_user_photo"
        app:layout_constraintStart_toEndOf="@id/settings_user_photo"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="В сети"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_username"
        app:layout_constraintStart_toEndOf="@id/settings_user_photo"/>
</androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/settings_text_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Аккаунт"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/settings_header_bloc"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_btn_change_number_phone"
        app:layout_constraintTop_toBottomOf="@id/settings_text_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/settings_buttons">

        <TextView
            android:id="@+id/id_settings_phone_number"
            app:layout_constraintTop_toTopOf="@id/settings_btn_change_number_phone"
            app:layout_constraintStart_toStartOf="parent"
            android:text="+7521455555"
            style="@style/normal_text" />
        <TextView
            android:id="@+id/id_settings_label_phone_number"
            app:layout_constraintTop_toBottomOf="@id/id_settings_phone_number"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Нажмите чтобы изменить номер телефона"
            style="@style/small_text"/>

            <View
                app:layout_constraintTop_toBottomOf="@id/id_settings_label_phone_number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/separator" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_btn_change_login"
        app:layout_constraintTop_toBottomOf="@id/settings_btn_change_number_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/settings_buttons">

        <TextView
            android:id="@+id/id_settings_login"
            app:layout_constraintTop_toTopOf="@id/settings_btn_change_login"
            app:layout_constraintStart_toStartOf="parent"
            android:text="ehffdf  fdfdfdf"
            style="@style/normal_text" />
        <TextView
            android:id="@+id/id_settings_label_login"
            app:layout_constraintTop_toBottomOf="@id/id_settings_login"
            app:layout_constraintStart_toStartOf="parent"
            android:text="имя пользователя"
            style="@style/small_text"/>

        <View
            app:layout_constraintTop_toBottomOf="@id/id_settings_label_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/separator" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settings_btn_change_bio"
        app:layout_constraintTop_toBottomOf="@id/settings_btn_change_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/settings_buttons">

        <TextView
            android:id="@+id/id_settings_bio"
            app:layout_constraintTop_toTopOf="@id/settings_btn_change_bio"
            app:layout_constraintStart_toStartOf="parent"
            android:text="О себе"
            style="@style/normal_text" />
        <TextView
            android:id="@+id/id_settings_label_bio"
            app:layout_constraintTop_toBottomOf="@id/id_settings_bio"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Напишите немоного о себе"
            style="@style/small_text"/>

        <View
            app:layout_constraintTop_toBottomOf="@id/id_settings_label_bio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/separator" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_change_photo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@color/colorPrimary"
        app:civ_border_color="@color/black"
        android:src="@drawable/default_photo"
        app:layout_constraintBottom_toBottomOf="@+id/settings_header_bloc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_header_bloc" />

</androidx.constraintlayout.widget.ConstraintLayout>